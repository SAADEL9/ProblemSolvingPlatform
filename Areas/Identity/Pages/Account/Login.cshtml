@page "/Identity/Account/Login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

<div class="auth-container" style="height:700px">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Welcome Back</h1>
            <p>Log in to continue your coding journey</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4 px-1">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label text-white-50 small" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none">Forgot password?</a>
            </div>
            
            <button id="login-submit" type="submit" class="btn btn-auth w-100">Log in</button>
            
            <div class="auth-footer">
                <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></p>
                <p class="mt-2">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small">Resend email confirmation</a>
                </p>
            </div>
        </form>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="divider">or continue with</div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="social-login-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            @if (provider.DisplayName == "Google") { <i class="bi bi-google"></i> }
                            else if (provider.DisplayName == "GitHub") { <i class="bi bi-github"></i> }
                            else { <i class="bi bi-box-arrow-in-right"></i> }
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

