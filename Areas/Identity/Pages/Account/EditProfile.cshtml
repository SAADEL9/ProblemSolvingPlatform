@page
@model ProblemSolvingPlatform.Areas.Identity.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <a asp-page="./Profile" class="btn btn-outline-secondary mb-3">
                    <i class="bi bi-arrow-left"></i> Back to Profile
                </a>
                <h1 class="fw-bold">
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </h1>
                <p class="text-muted">Update your personal information</p>
            </div>

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Edit Form -->
            <form method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" id="validationSummary"></div>

                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-person"></i> Personal Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4 text-center">
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(Model.CurrentUser.ProfilePicture))
                                    {
                                        <img id="profilePreview" src="@Model.CurrentUser.ProfilePicture" alt="Profile" class="rounded-circle" style="width:140px; height:140px; object-fit:cover; border:4px solid #f0f0f0;" />
                                    }
                                    else
                                    {
                                        <div id="profilePreview" class="rounded-circle d-flex align-items-center justify-content-center" style="width:140px; height:140px; object-fit:cover; border:4px solid #f0f0f0; background:linear-gradient(135deg,#667eea 0%,#764ba2 100%); color:white; font-size:2.5rem;">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                    }
                                </div>

                                <div>
                                    <label class="form-label fw-semibold">Profile Picture</label>
                                    <input asp-for="ProfileImage" type="file" accept="image/*" class="form-control form-control-sm" onchange="previewImage(event)" />
                                    <span asp-validation-for="ProfileImage" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-2">Max 2 MB. Formats: jpg, jpeg, png, gif.</small>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="firstName" class="form-label fw-semibold">First Name</label>
                                        <input asp-for="Input.FirstName" class="form-control form-control-lg" placeholder="Enter your first name" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastName" class="form-label fw-semibold">Last Name</label>
                                        <input asp-for="Input.LastName" class="form-control form-control-lg" placeholder="Enter your last name" />
                                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="email" class="form-label fw-semibold">Email Address</label>
                                        <input type="email" class="form-control form-control-lg" value="@Model.CurrentUser.Email" disabled>
                                        <small class="text-muted">Your email cannot be changed</small>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="phoneNumber" class="form-label fw-semibold">Phone Number</label>
                                        <input asp-for="Input.PhoneNumber" type="tel" class="form-control form-control-lg" placeholder="+1 (555) 000-0000" />
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="username" class="form-label fw-semibold">Username</label>
                                        <input type="text" class="form-control form-control-lg" value="@Model.CurrentUser.UserName" disabled>
                                        <small class="text-muted">Your username cannot be changed</small>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="registrationDate" class="form-label fw-semibold">Member Since</label>
                                        <input type="text" class="form-control form-control-lg" value="@Model.CurrentUser.RegistrationDate.ToString("MMMM dd, yyyy")" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                    <a asp-page="./Profile" class="btn btn-outline-secondary btn-lg flex-grow-1">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>

            <!-- Change Password Card -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Account Security
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Want to change your password? Use the dedicated password change page.</p>
                    <a asp-page="./ChangePassword" class="btn btn-outline-warning">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="card shadow-sm border-0 mt-4 border-danger">
                <div class="card-header bg-danger bg-opacity-10 border-danger">
                    <h5 class="mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Danger Zone
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">These actions cannot be undone.</p>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                        <i class="bi bi-trash"></i> Delete Account
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger bg-opacity-10 border-danger">
                <h1 class="modal-title fs-5 text-danger" id="deleteAccountLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Delete Account
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Are you sure you want to delete your account? This action cannot be undone and all your data will be permanently removed.</p>
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-exclamation-circle"></i> <strong>Warning:</strong> All your submissions, comments, and profile data will be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="DeleteAccount" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete My Account
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:disabled,
    .form-control[readonly] {
        background-color: #f8f9fa;
        color: #6c757d;
    }

    .form-control-lg {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
        color: #333;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-weight: 500;
    }

    .alert {
        border-radius: 0.5rem;
    }

    #profilePreview img {
        width: 140px;
        height: 140px;
        object-fit: cover;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Display server validation summary if any
        (function() {
            const summary = document.querySelector('[asp-validation-summary]');
            if (!summary) return;
            const errors = document.querySelectorAll('.validation-summary-errors, .field-validation-error');
            if (errors.length > 0) {
                summary.classList.remove('d-none');
                // Fill summary with ModelState errors (handled by tag helpers on server)
            }
        })();

        function previewImage(e) {
            const input = e.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (ev) {
                    const preview = document.getElementById('profilePreview');
                    if (preview.tagName === 'IMG') {
                        preview.src = ev.target.result;
                    } else {
                        // replace inner div with img
                        preview.outerHTML = `<img id="profilePreview" src="${ev.target.result}" alt="Profile" class="rounded-circle" style="width:140px; height:140px; object-fit:cover; border:4px solid #f0f0f0;" />`;
                    }
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
