@model ProblemSolvingPlatform.Models.Probleme
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ProblemSolvingPlatform.Models.User> SignInManager
@inject UserManager<ProblemSolvingPlatform.Models.User> UserManager

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title;
    var isAdmin = User.IsInRole("Admin");
    var comments = ViewBag.Comments as List<Commentaire> ?? new List<Commentaire>();

    var testsJson = "[]";
    if (!string.IsNullOrEmpty(Model.TestCases))
    {
        try
        {
            var parsed = System.Text.Json.JsonSerializer.Deserialize<object>(Model.TestCases);
            testsJson = System.Text.Json.JsonSerializer.Serialize(parsed);
        }
        catch
        {
            testsJson = "[]";
        }
    }
}

<div class="problem-workspace">
    <!-- Header/Breadcrumb Bar -->
    <div class="workspace-header d-flex justify-content-between align-items-center px-4 py-2 border-bottom border-secondary bg-black bg-opacity-20">
        <div class="d-flex align-items-center gap-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item small"><a asp-action="Index" class="text-white-50 text-decoration-none">Problems</a></li>
                    <li class="breadcrumb-item active text-white small" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
            <div class="vr bg-secondary mx-2" style="height: 1.5rem;"></div>
            <div class="d-flex gap-2">
                <span class="badge rounded-pill @(Model.Difficulte == "Easy" ? "bg-success-subtle text-success border border-success" : Model.Difficulte == "Medium" ? "bg-warning-subtle text-warning border border-warning" : "bg-danger-subtle text-danger border border-danger") px-2 py-1">@Model.Difficulte</span>
                <span class="badge rounded-pill bg-white bg-opacity-10 text-white-50 border border-white border-opacity-10 px-2 py-1">@Model.Language?.ToUpper()</span>
            </div>
        </div>
        <div class="d-flex gap-2">
            @if (isAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model.ProbId" class="btn btn-dark btn-sm border-secondary text-white-50 rounded-3">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-dark btn-sm border-secondary text-white-50 rounded-3">
                <i class="bi bi-list me-1"></i> All Problems
            </a>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="workspace-body d-flex">
        <!-- Left Pane: Problem Details & Tabs -->
        <div class="pane pane-left border-end border-secondary d-flex flex-column">
            <ul class="nav nav-tabs workspace-tabs border-bottom border-secondary bg-black bg-opacity-10 px-3" id="problemTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active py-2 small fw-bold text-uppercase" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab"><i class="bi bi-file-earmark-text me-1"></i> Description</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link py-2 small fw-bold text-uppercase" id="discussion-tab" data-bs-toggle="tab" data-bs-target="#discussion" type="button" role="tab"><i class="bi bi-chat-dots me-1"></i> Discussion (@comments.Count)</button>
                </li>
            </ul>
            
            <div class="tab-content flex-grow-1 overflow-hidden" id="problemTabsContent">
                <!-- Description Tab -->
                <div class="tab-pane fade show active h-100 overflow-auto pane-content px-4 py-3" id="description" role="tabpanel">
                    <h2 class="fw-bold text-white mb-3">@Model.Title</h2>
                    <div class="problem-description text-white-50 lh-lg mb-5">
                        @Html.Raw(Model.Descr)
                    </div>

                    @if (!string.IsNullOrEmpty(Model.FunctionTemplate))
                    {
                        <div class="mt-4 mb-5">
                            <h6 class="text-white small text-uppercase fw-bold mb-3 opacity-50">Base Template</h6>
                            <div class="bg-black bg-opacity-40 rounded-3 p-3 border border-secondary">
                                <pre class="mb-0"><code class="text-info small">@Model.FunctionTemplate</code></pre>
                            </div>
                        </div>
                    }
                </div>
                
                <!-- Discussion Tab -->
                <div class="tab-pane fade h-100 d-flex flex-column pane-content" id="discussion" role="tabpanel">
                    <div class="comments-header p-4 border-bottom border-secondary">
                        <h5 class="text-white fw-bold mb-3">Community Discussion</h5>
                        <div class="comment-form">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="mb-3">
                                    <textarea id="commentInput" class="form-control bg-dark border-secondary text-white small" rows="3" placeholder="Add a comment..."></textarea>
                                </div>
                                <div class="text-end">
                                    <button id="postCommentBtn" class="btn btn-primary btn-sm rounded-pill px-4">Post Comment</button>
                                </div>
                            }
                            else
                            {
                                <div class="p-3 bg-dark border border-secondary rounded-3 text-center">
                                    <p class="text-white-50 small mb-0">Please <a href="/Identity/Account/Login" class="text-primary text-decoration-none">login</a> to join the discussion.</p>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div id="commentsList" class="flex-grow-1 overflow-auto p-4">
                        @if (comments.Any())
                        {
                            @foreach (var comment in comments)
                            {
                                <div class="comment-item mb-4 pb-4 border-bottom border-secondary border-opacity-25">
                                    <div class="d-flex align-items-center mb-2">
                                        <img src="@(comment.User?.ProfilePicture ?? "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png")" class="rounded-circle me-2 border border-secondary" width="28" height="28" style="object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <span class="text-white small fw-bold">@(comment.User?.FirstName + " " + comment.User?.LastName)</span>
                                            <span class="text-white-50 small ms-2" style="font-size: 0.7rem;">@comment.DateCreation.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="comment-content text-white-50 small lh-base">
                                        @comment.Contenu
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5 no-comments-state">
                                <i class="bi bi-chat-dots text-secondary opacity-25 display-4 mb-3 d-block"></i>
                                <p class="text-white-50 small">No comments yet. Be the first to share your thoughts!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Pane: Code & Console -->
        <div class="pane pane-right d-flex flex-column">
            <!-- Code Editor Section -->
            <div class="editor-section flex-grow-1 d-flex flex-column">
                <div class="pane-header px-4 py-2 d-flex justify-content-between align-items-center border-bottom border-secondary">
                    <div class="d-flex align-items-center gap-2">
                        <h6 class="mb-0 text-white fw-bold"><i class="bi bi-terminal me-2 text-success"></i> Code</h6>
                        <select id="languageSelect" class="form-select form-select-sm bg-dark border-secondary text-white-50 rounded-3 ms-2" style="width: 120px; font-size: 0.8rem;">
                            <option value="python">Python</option>
                            <option value="javascript">JavaScript</option>
                            <option value="java">Java</option>
                            <option value="cpp">C++</option>
                            <option value="csharp">C#</option>
                        </select>
                    </div>
                    <div class="d-flex gap-2">
                         <button id="clearBtn" class="btn btn-dark btn-sm border-secondary text-white-50 rounded-3" title="Reset Code">
                            <i class="bi bi-arrow-clockwise"></i>
                        </button>
                    </div>
                </div>
                <div class="editor-container position-relative flex-grow-1" style="min-height: 200px;">
                    <div id="monaco-editor-container" class="h-100 w-100"></div>
                    <textarea id="codeEditor" class="form-control d-none">@(string.IsNullOrEmpty(Model.FunctionTemplate) ? "def solution():\n    pass" : Model.FunctionTemplate)</textarea>
                </div>
                <div class="editor-footer px-4 py-2 border-top border-secondary bg-black bg-opacity-20 d-flex justify-content-between align-items-center">
                    <div class="d-flex gap-2">
                        <button id="consoleToggle" class="btn btn-dark btn-sm border-secondary text-white-50 rounded-3">
                            Console <i class="bi bi-chevron-up ms-1 small"></i>
                        </button>
                    </div>
                    <div class="d-flex gap-2">
                        <button id="runBtn" class="btn btn-dark border-secondary text-white px-4 rounded-3 fw-bold btn-sm">
                            <i class="bi bi-play-fill me-1 text-success"></i> Run
                        </button>
                        <button id="testBtn" class="btn btn-dark border-secondary text-white px-4 rounded-3 fw-bold btn-sm">
                            <i class="bi bi-check2-all me-1 text-info"></i> Test
                        </button>
                        <button id="submitBtn" class="btn btn-primary px-4 rounded-3 fw-bold btn-sm shadow-sm">
                            Submit
                        </button>
                    </div>
                </div>
            </div>

            <!-- Console Section (Always Visible now or larger) -->
            <div id="consoleSection" class="console-section border-top border-secondary bg-dark shadow-lg" style="height: 350px; display: flex; flex-direction: column; flex-shrink: 0;">
                <div class="pane-header px-4 py-2 d-flex justify-content-between align-items-center border-bottom border-secondary bg-black bg-opacity-30">
                    <div class="d-flex align-items-center gap-3">
                        <h6 class="mb-0 text-white small fw-bold text-uppercase tracking-wider">Console Output</h6>
                        <div id="executionBadge" class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25" style="transition: opacity 0.3s;">Ready</div>
                    </div>
                </div>
                <div class="console-content flex-grow-1 d-flex overflow-hidden bg-black bg-opacity-40">
                    <div class="console-input p-3 border-end border-secondary" style="width: 30%">
                         <label class="small text-white-50 text-uppercase fw-bold mb-2 d-block" style="font-size: 0.65rem;">Custom Input</label>
                         <textarea id="inputEditor" class="form-control bg-black border-secondary text-white font-monospace small h-75" placeholder="[1, 2, 3], 4" style="border-radius: 0.5rem; resize: none;"></textarea>
                    </div>
                    <div class="console-output p-4 flex-grow-1 overflow-auto">
                        <div id="outputEditor" class="font-monospace small text-white" style="white-space: pre-wrap; word-break: break-all; opacity: 0.9;">Output results will appear here...</div>
                        <div id="testResults" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

