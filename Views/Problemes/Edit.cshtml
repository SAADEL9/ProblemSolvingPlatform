@model ProblemSolvingPlatform.Models.Probleme

@{
    ViewData["Title"] = "Edit Problem";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-white mb-0">Edit Challenge</h2>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            <div class="card bg-dark border-secondary shadow-lg" style="border-radius: 1.5rem;">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                        <input type="hidden" asp-for="ProbId" />

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label text-white-50 small text-uppercase fw-bold">Title</label>
                            <input asp-for="Title" class="form-control bg-black border-secondary text-white p-3" placeholder="Enter title..." style="border-radius: 0.8rem;" />
                            <span asp-validation-for="Title" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descr" class="form-label text-white-50 small text-uppercase fw-bold">Description</label>
                            <textarea asp-for="Descr" class="form-control bg-black border-secondary text-white p-3" rows="4" style="border-radius: 0.8rem;"></textarea>
                            <span asp-validation-for="Descr" class="text-danger small mt-1"></span>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Difficulte" class="form-label text-white-50 small text-uppercase fw-bold">Difficulty</label>
                                <select asp-for="Difficulte" class="form-select bg-black border-secondary text-white p-3" style="border-radius: 0.8rem;">
                                    <option value="Easy">Easy</option>
                                    <option value="Medium">Medium</option>
                                    <option value="Hard">Hard</option>
                                </select>
                                <span asp-validation-for="Difficulte" class="text-danger small mt-1"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Language" class="form-label text-white-50 small text-uppercase fw-bold">Language</label>
                                <select asp-for="Language" class="form-select bg-black border-secondary text-white p-3" style="border-radius: 0.8rem;">
                                    <option value="python">Python</option>
                                    <option value="javascript">JavaScript</option>
                                    <option value="java">Java</option>
                                    <option value="cpp">C++</option>
                                    <option value="csharp">C#</option>
                                </select>
                                <span asp-validation-for="Language" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="FunctionTemplate" class="form-label text-white-50 small text-uppercase fw-bold">Function Template</label>
                            <textarea asp-for="FunctionTemplate" class="form-control bg-black border-secondary text-white p-3 font-monospace" rows="6" style="border-radius: 0.8rem;"></textarea>
                            <span asp-validation-for="FunctionTemplate" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-5">
                            <label asp-for="TestCases" class="form-label text-white-50 small text-uppercase fw-bold">Test Cases (JSON)</label>
                            <textarea asp-for="TestCases" class="form-control bg-black border-secondary text-white p-3 font-monospace" rows="6" style="border-radius: 0.8rem;"></textarea>
                            <span asp-validation-for="TestCases" class="text-danger small mt-1"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold shadow">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
