@{
    ViewData["Title"] = "Home - Problem Solving Platform";
    var latestProblems = ViewData["LatestProblems"] as List<Probleme> ?? new List<Probleme>();
    var difficultyStats = ViewData["DifficultyStats"] as Dictionary<string, int> ?? new Dictionary<string, int>();
    var totalUsers = (int?)ViewData["TotalUsers"] ?? 0;
    var totalProblems = (int?)ViewData["TotalProblems"] ?? 0;
    var isAdmin = User.IsInRole("Admin");
}

<!-- Hero Section -->
<section class="hero-section py-5 text-center mb-5" style="background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); border-radius: 2rem; box-shadow: 0 25px 50px -12px rgba(79, 70, 229, 0.25); width : 80%; margin-left:10%">
    <div class="container py-4">
        <h1 class="display-3 fw-bold mb-3 text-white">Master the Art of <span class="text-warning">Coding</span>.</h1>
        <p class="lead text-white-50 mb-5 fs-4">Join a community of experts. Solve, learn, and grow your engineering career.</p>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a href="@Url.Action("Index", "Problemes")" class="btn btn-white btn-lg px-5 py-3 rounded-pill fw-bold shadow-lg">
                <i class="bi bi-rocket-takeoff me-2"></i> Start Solving
            </a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a href="@Url.Page("/Account/Register", new { area = "Identity" })" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill fw-bold">
                    Join for free
                </a>
            }
        </div>
    </div>
</section>
<div style="height:1600px">
<div class="container">
    <!-- Stats Grid -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card bg-dark border-secondary h-100 p-3" style="border-radius: 1.5rem;">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-primary-subtle rounded-circle p-3 me-3">
                        <i class="bi bi-code-square text-primary fs-3"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold text-white mb-0">@totalProblems</h3>
                        <p class="text-white-50 mb-0">Total Problems</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark border-secondary h-100 p-3" style="border-radius: 1.5rem;">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-success-subtle rounded-circle p-3 me-3">
                        <i class="bi bi-people text-success fs-3"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold text-white mb-0">@totalUsers</h3>
                        <p class="text-white-50 mb-0">Active Users</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark border-secondary h-100 p-3" style="border-radius: 1.5rem;">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-box bg-warning-subtle rounded-circle p-3 me-3">
                        <i class="bi bi-check2-circle text-warning fs-3"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold text-white mb-0">1.2M+</h3>
                        <p class="text-white-50 mb-0">Submissions</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Practice by Difficulty -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-end mb-4">
            <div>
                <h2 class="fw-bold text-white mb-1">Practice by Difficulty</h2>
                <p class="text-white-50 mb-0">Structured paths for every skill level</p>
            </div>
        </div>
        <div class="row g-4">
            @{
                var difficulties = new[] { "Easy", "Medium", "Hard" };
                var diffColors = new[] { "#22c55e", "#f59e0b", "#ef4444" };
                var diffIcons = new[] { "emoji-smile", "lightning", "fire" };
            }
            @for (int i = 0; i < difficulties.Length; i++)
            {
                var difficulty = difficulties[i];
                var count = difficultyStats.ContainsKey(difficulty) ? difficultyStats[difficulty] : 0;
                <div class="col-md-4">
                    <a href="@Url.Action("Index", "Problemes")?difficulty=@difficulty" class="text-decoration-none">
                        <div class="card bg-dark border-secondary h-100 difficulty-card" style="border-radius: 1.5rem; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);">
                            <div class="card-body p-4 text-center">
                                <i class="bi bi-@diffIcons[i] display-5 mb-3 d-block" style="color: @diffColors[i]"></i>
                                <h4 class="fw-bold text-white mb-2">@difficulty</h4>
                                <div class="d-flex justify-content-between align-items-center mt-3 bg-black rounded-pill p-2 px-4">
                                    <span class="text-white-50 small text-uppercase">Available</span>
                                    <span class="fw-bold" style="color: @diffColors[i]">@count Problems</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>
    
    <!-- Latest Challenges -->
    <section class="mb-5">
        <div class="card bg-dark border-secondary" style="border-radius: 1.5rem; overflow: hidden;">
            <div class="card-header bg-black border-bottom border-secondary p-4 d-flex justify-content-between align-items-center">
                <h4 class="fw-bold text-white mb-0"><i class="bi bi-star me-2 text-warning"></i> Latest Challenges</h4>
                <a href="@Url.Action("Index", "Problemes")" class="btn btn-outline-secondary btn-sm rounded-pill px-3">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-dark table-hover mb-0 align-middle">
                    <tbody>
                        @foreach (var problem in latestProblems.Take(5))
                        {
                            var diffColor = problem.Difficulte switch { "Easy" => "success", "Medium" => "warning", "Hard" => "danger", _ => "secondary" };
                            <tr class="border-bottom border-secondary">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-subtle rounded p-2 me-3">
                                            <i class="bi bi-code-slash text-primary"></i>
                                        </div>
                                        <div>
                                            <span class="d-block text-white fw-bold">@problem.Title</span>
                                            <small class="text-white-50">Problem #@problem.ProbId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-@diffColor-subtle text-@diffColor border border-@diffColor px-3">@problem.Difficulte</span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Details", "Problemes", new { id = problem.ProbId })" class="btn btn-primary rounded-pill btn-sm px-3">
                                        Solve <i class="bi bi-chevron-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<div class="container">
    <section class="admin-panel mb-5">
        <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%); border-radius: 2rem;">
            <div class="card-body p-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="fw-bold text-white mb-1"><i class="bi bi-shield-check me-2"></i> Admin Gateway</h2>
                        <p class="text-indigo-200 opacity-75 mb-0">Platform management and analytics</p>
                    </div>
                    <div>
                        <a href="@Url.Action("Create", "Problemes")" class="btn btn-white rounded-pill px-4 shadow">
                            <i class="bi bi-plus-circle me-1"></i> New Problem
                        </a>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-md-6 col-lg-3">
                        <div class="p-4 bg-white bg-opacity-10 rounded-4 border border-white border-opacity-10">
                            <div class="small text-indigo-100 text-uppercase tracking-wider mb-2">Total Users</div>
                            <div class="display-6 fw-bold text-white">@totalUsers</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="p-4 bg-white bg-opacity-10 rounded-4 border border-white border-opacity-10">
                            <div class="small text-indigo-100 text-uppercase tracking-wider mb-2">Easy Mode</div>
                            <div class="display-6 fw-bold text-white">@(difficultyStats.GetValueOrDefault("Easy", 0))</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="p-4 bg-white bg-opacity-10 rounded-4 border border-white border-opacity-10">
                            <div class="small text-indigo-100 text-uppercase tracking-wider mb-2">Medium Mode</div>
                            <div class="display-6 fw-bold text-white">@(difficultyStats.GetValueOrDefault("Medium", 0))</div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="p-4 bg-white bg-opacity-10 rounded-4 border border-white border-opacity-10">
                            <div class="small text-indigo-100 text-uppercase tracking-wider mb-2">Hard Mode</div>
                            <div class="display-6 fw-bold text-white">@(difficultyStats.GetValueOrDefault("Hard", 0))</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
</div>
<style>
    .btn-white { background: white; color: #4f46e5; border: 1px solid white; transition: all 0.3s ease; }
    .btn-white:hover { background: rgba(255, 255, 255, 0.9); transform: translateY(-2px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); color: #3730a3; }
    
    .difficulty-card:hover { 
        transform: translateY(-10px); 
        border-color: #6366f1 !important;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 10px 10px -5px rgba(99, 102, 241, 0.1) !important;
    }
    
    .bg-primary-subtle { background: rgba(99, 102, 241, 0.1) !important; }
    .bg-success-subtle { background: rgba(34, 197, 94, 0.1) !important; }
    .bg-warning-subtle { background: rgba(245, 158, 11, 0.1) !important; }
    .bg-danger-subtle { background: rgba(239, 68, 68, 0.1) !important; }
    
    .text-indigo-200 { color: #c7d2fe; }
    .tracking-wider { letter-spacing: 0.05em; }

</style>
