@model ProblemSolvingPlatform.Models.Classement
@using Microsoft.AspNetCore.Identity
@inject UserManager<ProblemSolvingPlatform.Models.User> UserManager

@{
    ViewData["Title"] = "Ranking Details";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center mb-4">
                <h1 class="fw-bold text-white">Ranking Details</h1>
                <p class="text-white-50">Detailed performance statistics for @(Model.User?.UserName ?? "User")</p>
            </div>

            <div class="card bg-dark border-secondary shadow-lg p-3" style="border-radius: 1.5rem;">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="/images/default-profile.png" class="rounded-circle border border-4 border-primary shadow mb-3" width="100" height="100" alt="Avatar">
                        <h3 class="text-white fw-bold mb-0">@(Model.User?.FirstName + " " + Model.User?.LastName)</h3>
                        <p class="text-primary fw-bold">@@@(Model.User?.UserName ?? "anonymous")</p>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="bg-black bg-opacity-50 p-3 rounded-4 border border-secondary text-center">
                                <div class="text-white-50 small text-uppercase mb-1">Current Rank</div>
                                <div class="h3 fw-bold text-warning mb-0">#@Model.Rang</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="bg-black bg-opacity-50 p-3 rounded-4 border border-secondary text-center">
                                <div class="text-white-50 small text-uppercase mb-1">Total Score</div>
                                <div class="h3 fw-bold text-primary mb-0">@Model.Score</div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="bg-black bg-opacity-50 p-3 rounded-4 border border-secondary text-center">
                                <div class="text-white-50 small text-uppercase mb-1">Problems Solved</div>
                                <div class="h3 fw-bold text-success mb-0">@Model.ProblemsSolved</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.ClassementId" class="btn btn-primary flex-grow-1 rounded-pill">
                                <i class="bi bi-pencil me-1"></i> Edit Entry
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill @(isAdmin ? "px-4" : "flex-grow-1")">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-black { background-color: #000 !important; }
</style>
