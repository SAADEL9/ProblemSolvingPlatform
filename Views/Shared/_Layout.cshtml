@using Microsoft.AspNetCore.Identity
@inject UserManager<ProblemSolvingPlatform.Models.User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title class="text-white">@ViewData["Title"] - ProblemSolvingPlatform</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProblemSolvingPlatform.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0a0a0a !important;
        }
        .navbar-glass {
            background: rgba(10, 10, 10, 0.8) !important;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
        }
        .nav-link {
            font-weight: 500;
            transition: color 0.2s ease;
        }
        .nav-link:hover {
            color: #6366f1 !important;
        }
        .btn-logout {
            background: rgba(220, 38, 38, 0.1);
            color: #ef4444 !important;
            border: 1px solid rgba(220, 38, 38, 0.2);
            padding: 0.4rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }
        .btn-logout:hover {
            background: rgba(220, 38, 38, 0.2);
            border-color: rgba(220, 38, 38, 0.4);
        }
        footer {
            background: #0a0a0a;
            border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
        }
    </style>
</head>
<body class="bg-black text-white">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark sticky-top navbar-glass mb-4 shadow-sm" style="top: 0; z-index: 1030;">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu-fill me-2 text-primary"></i>
                    <span>LeetCode<span class="text-primary">Clone</span></span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-white px-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3" asp-area="" asp-controller="Problemes" asp-action="Index">Problems</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3" asp-area="" asp-controller="Classements" asp-action="Index">Leaderboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-3 opacity-75" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center p-0" href="#" id="profileDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="position-relative">
                                        @{
                                            var user = await UserManager.GetUserAsync(User);
                                            var profilePic = user?.ProfilePicture ?? "/images/default-profile.png";
                                        }
                                        <img src="@profilePic"
                                             class="rounded-circle border border-2 border-primary" width="38" height="38" alt="Profile" style="object-fit: cover;">
                                        <span class="position-absolute bottom-0 end-0 p-1 bg-success border border-light rounded-circle"></span>
                                    </div>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-secondary bg-dark" aria-labelledby="profileDropdown">
                                    <li class="px-3 py-2 border-bottom border-secondary mb-2">
                                        <span class="d-block text-white small">Signed in as</span>
                                        <strong class="text-white">@User.Identity.Name</strong>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-white py-2" asp-area="Identity" asp-page="/Account/Profile">
                                            <i class="bi bi-person me-2"></i> My Profile
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item text-white py-2" asp-area="Identity" asp-page="/Account/EditProfile">
                                            <i class="bi bi-gear me-2"></i> Settings
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider border-secondary"></li>

                                    <li class="px-2">
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button class="btn btn-danger w-100 py-2 btn-sm rounded-pill">
                                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light rounded-pill px-4 me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-4" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer text-white-50 py-4 mt-auto">
        <div class="container text-center text-md-start">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span>&copy; 2025 - <span class="text-white">LeetCodeClone</span></span>
                    <span class="mx-2">|</span>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none hover-white">Privacy Policy</a>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <a href="#" class="text-white-50 fs-5 mx-2"><i class="bi bi-github"></i></a>
                    <a href="#" class="text-white-50 fs-5 mx-2"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="text-white-50 fs-5 mx-2"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
